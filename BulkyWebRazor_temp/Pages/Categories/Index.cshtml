@page
@model BulkyWebRazor_temp.Pages.Categories.IndexModel
<h1>Category List</h1>

<div class="container">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-page="/categories/create"  class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Create New Category
            </a>
        </div>

    </div>
</div>
<table class="table table-bordered table-striped">
    <thread>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>
    </thread>
    <tbody>
        <!--Use C# Code to move thru the category list,and show the information -->
        <!--Model HAS to be in Uppercase first letter -->
        @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                    </div>
                </td>


            </tr>
        }
    </tbody>
</table>