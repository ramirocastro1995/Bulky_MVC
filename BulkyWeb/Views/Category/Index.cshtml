<!--Import the objCategoryList from the controller -->
@model List<Category>

<div class="container">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class ="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Create New Category
            </a>
        </div>

    </div>
</div>
<table class="table table-bordered table-striped">
    <thread>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thread>
    <tbody>
        <!--Use C# Code to move thru the category list,and show the information -->
        <!--Model HAS to be in Uppercase first letter -->
        @foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>
                    @obj.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>
